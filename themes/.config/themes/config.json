{
    "kitty": {
        "path": "/.config/kitty/kitty.conf",
        "light": ["materialLight"],
        "dark": ["materialDark"],
        "commands": ["killall -SIGUSR1 kitty"]
    },
    "bitwarden": {
        "path": "/.config/Bitwarden/data.json",
        "light": ["light"],
        "dark": ["dark"]
    },
    "sway": {
        "path": "/.config/sway/config",
        "light": ["Adwaita-light", "lightTheme", "lightFuzzel", "Papirus-Light"],
        "dark": ["Adwaita-dark", "darkTheme", "darkFuzzel", "Papirus-Dark"],
        "commands": ["sway reload"]
    },
    "gtk-3.0": {
        "path": "/.config/gtk-3.0/settings.ini",
        "light": ["Adwaita-light", "Papirus-Light","gtk-application-prefer-dark-theme=false"],
        "dark": ["Adwaita-dark", "Papirus-Dark","gtk-application-prefer-dark-theme=true"]
    },
    "bemenu": {
        "path": "/.config/scripts/sh/bemenu_theme",
        "light": ["theme=$light"],
        "dark": ["theme=$dark"]
    },
    "vscode": {
        "path": "/.config/Code/User/settings.json",
        "light": ["Visual Studio Light"],
        "dark": ["One Dark Pro"]
    },
    "ncmpcpp": {
        "path": "/.config/ncmpcpp/config",
        "light": ["white"],
        "dark": ["black"]
    },
    "bpytop": {
        "path": "/.config/bpytop/bpytop.conf",
        "light": ["flat-remix-light"],
        "dark": ["default"]
    },
    "mako": {
        "path": "/.config/mako/config",
        "light": ["background-color=#f6f5f4", "text-color=#535353", "border-color=#535353"],
        "dark": ["background-color=#353535", "text-color=#c4c4c4", "border-color=#c4c4c4"],
        "commands": ["makoctl reload"]
    },
    "microsoft-teams": {
        "path": "/.config/Microsoft/Microsoft Teams/desktop-config.json",
        "light": ["defaultV2"],
        "dark": ["darkV2"]
    },
    "zathura": {
        "path": "/.config/zathura/zathurarc",
        "light": ["lightTheme"],
        "dark": ["darkTheme"]
    },
    "waybar": {
        "path": "/.config/waybar/style.css",
        "light": ["#f6f5f4", "#535353", "#1976d2", "#d32f2f","f4f4f4"],
        "dark": ["#353535", "#c4c4c4", "#1976d2", "#f44336","1e1e1e"],
        "commands": ["killall -SIGUSR2 waybar"]
    },
    "swaylock": {
        "path": "/.config/swaylock/config",
        "light": ["inside-color=f6f5f4ff", "text-color=535353ff","key-hl-color=535353ff"],
        "dark": ["inside-color=353535ff", "text-color=c4c4c4ff","key-hl-color=c4c4c4ff"]
    },
    "libre-office": {
        "path": "/.config/libreoffice/4/user/registrymodifications.xcu",
        "light": ["<item oor:path=\"/org.openoffice.Office.UI/ColorScheme\"><prop oor:name=\"CurrentColorScheme\" oor:op=\"fuse\"><value>LibreOffice</value></prop></item>"],
        "dark": ["<item oor:path=\"/org.openoffice.Office.UI/ColorScheme\"><prop oor:name=\"CurrentColorScheme\" oor:op=\"fuse\"><value>LibreOffice Dark</value></prop></item>"]
    },
    "android-studio-ide": {
        "path": "/.config/Google/AndroidStudio2021.1/options/colors.scheme.xml",
        "light": ["global_color_scheme name=\"IntelliJ Light\""],
        "dark": ["global_color_scheme name=\"_@user_Darcula\""]
    },
    "android-studio": {
        "path": "/.config/Google/AndroidStudio2021.1/options/laf.xml",
        "light": ["<laf class-name=\"com.intellij.ide.ui.laf.IntelliJLaf\" themeId=\"JetBrainsLightTheme\" />"],
        "dark": ["<laf class-name=\"com.intellij.ide.ui.laf.darcula.DarculaLaf\" />"]
    }
}